@{
    ViewData["Title"] = "Welcome to OptiView";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-3 fw-bold">Welcome to OptiView</h1>
        <h2 class="lead fs-4 mt-3 mb-4">
            Your Vision, Our Focus
        </h2>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <img src="~/optikimg1.jpg" class="img-fluid rounded shadow" alt="Eye checkup image" />
            <h5 class="text-center mt-3">Book Eye Appointments</h5>
            <p class="text-center text-muted">
                Quickly schedule visits with experienced eye care professionals.
            </p>
        </div>

        <div class="col-md-4 mb-4">
            <img src="~/optikimg2.jpg" class="img-fluid rounded shadow" alt="Eyeglasses showcase" />
            <h5 class="text-center mt-3">Shop Eyewear</h5>
            <p class="text-center text-muted">
                Browse our collection of trendy and prescription-ready glasses.
            </p>
        </div>

        <div class="col-md-4 mb-4">
            <img src="~/optikimg4.jpg" class="img-fluid rounded shadow" alt="Contact lens products" />
            <h5 class="text-center mt-3">Order Contact Lenses</h5>
            <p class="text-center text-muted">
                Get the perfect fit and comfort with premium contact lenses.
            </p>
        </div>
    </div>
</div>